{
    "manifest_version": 3,
    "name": "Stalled Connection Page",
    "version": "4.0",
    "description": "Displays a custom page for stalled connections.",
    "permissions": [
      "activeTab", 
      "storage",
      "webRequest"
    ],
    "host_permissions": ["http://*/*", "https://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html" 
  }